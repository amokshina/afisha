<%= render 'shared/errors', object: @user %>

<%= form_with model: [:admin, user], data: { turbo: false } do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label t('activerecord.attributes.user.username') %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :username, placeholder: t('activerecord.attributes.user.username'), class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label t('activerecord.attributes.user.usersurname') %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :usersurname, placeholder: t('activerecord.attributes.user.usersurname'), class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label t('activerecord.attributes.user.email') %>
    </div>

    <div class="col-sm-10">
      <%= f.email_field :email, placeholder: t('activerecord.attributes.user.email'), class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label t('activerecord.attributes.user.role') %>
    </div>

    <div class="col-sm-10">
      <%= f.select :role, user_roles, {}, class: 'form-select form-select-lg' %>
    </div>
  </div>
  <!-- Остальные поля формы с использованием интернационализации -->
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label t('activerecord.attributes.user.password') %>
    </div>

    <div class="col-sm-10">
      <%= f.password_field :password, class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label t('activerecord.attributes.user.password_confirmation') %>
    </div>

    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-10 offset-sm-2">
      <%= f.submit (user.new_record? ? t('buttons.sign_in') : t('buttons.save_changes')),
                   class: 'btn btn-dark btn-lg' %>
    </div>
  </div>
<% end %>
