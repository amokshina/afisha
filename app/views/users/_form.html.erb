<%= render 'shared/errors', object: @user %>

<%= form_with model: @user, data: { turbo: false } do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label :username, t('users.form.name') %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :username, placeholder: t('users.form.name_placeholder'), class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label :usersurname, t('users.form.second_name') %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :usersurname, placeholder: t('users.form.second_name_placeholder'), class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label :email, t('users.form.email') %>
    </div>

    <div class="col-sm-10">
      <%= f.email_field :email, placeholder: t('users.form.email_placeholder'), class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label :password, t('users.form.password') %>
    </div>

    <div class="col-sm-10">
      <%= f.password_field :password, placeholder: t('users.form.password_placeholder'), class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label :password_confirmation, t('users.form.password_confirmation') %>
    </div>

    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, placeholder: t('users.form.password_confirmation_placeholder'), class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-10 offset-sm-2">
      <%= f.submit (@user.new_record? ? t('users.form.sign_in') : t('users.form.save_changes')),
                   class: 'btn btn-dark btn-lg' %>
    </div>
  </div>
<% end %>
