<% provide :page_title, t('login.title') %>

<h1 class="mb-4"><%= t('login.title') %></h1>

<%= form_with url: session_path, data: { turbo: false } do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label t('login.email_label') %>
    </div>

    <div class="col-sm-10">
      <%= f.email_field :email, value: params[:email],
                        placeholder: t('login.email_placeholder'), class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label text-sm-end">
      <%= f.label t('login.password_label') %>
    </div>

    <div class="col-sm-10">
      <%= f.password_field :password, placeholder: t('login.password_placeholder'), class: 'form-control form-control-lg'%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-10 offset-sm-2">
      <%= f.submit t('login.submit'), class: 'btn btn-dark btn-lg' %>
    </div>
  </div>
<% end %>
